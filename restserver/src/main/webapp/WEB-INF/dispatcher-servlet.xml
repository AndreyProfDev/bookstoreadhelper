        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

       <import resource="classpath:/env/${app.env}/db-configuration.xml"/>

       <context:property-placeholder location="classpath:env/common/rest_server.properties" />

       <mvc:annotation-driven/>
       <context:component-scan base-package="com.AndreyProfDev" />
